<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <Button
        android:id="@+id/ExitButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:alpha="0.8"
        android:background="@android:color/transparent"
        android:text="Exit"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:alpha="0.8"
        android:background="@android:color/transparent"
        android:text="Apply"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/WindInfo"
        android:layout_width="404dp"
        android:layout_height="40dp"
        android:text="Wind Information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/CloudsInfo"
        android:layout_width="404dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Clouds Information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WindInfo" />

    <CheckBox
        android:id="@+id/VisibilityInfo"
        android:layout_width="404dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Visibility Information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CloudsInfo" />

    <CheckBox
        android:id="@+id/SunsetInfo"
        android:layout_width="404dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Sunset and Sunrise Information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VisibilityInfo" />

    <CheckBox
        android:id="@+id/PressureInfo"
        android:layout_width="404dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Pressure Information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SunsetInfo" />

    <CheckBox
        android:id="@+id/HumidityInfo"
        android:layout_width="404dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Humidity Information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PressureInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>